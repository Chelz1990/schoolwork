#include <iostream>

using namespace std;

int centigrade(int x) {
    return (5/9) * x - 32;
}

int fahrenheit(int x) {
    return (x * 9/5) + 32;
}

double centigrade(double x) {
    return (0.55) * x - 32;
}

double fahrenheit(double x) {
    return (x * 1.8) + 32;
}

int main() {
    double x;
    cout << "Enter any number: ";
    cin >> x;
    cout << "The temperature in Centigrade is: " << centigrade(x) << endl;
    cout << "The temperature in Fahrenheit is: " << fahrenheit(x) << endl;
    return 0;
}
}
